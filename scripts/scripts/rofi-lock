#!/usr/bin/env bash

DIR="$HOME/Pictures/Wallpapers/"
mkdir -p "$DIR"

# Ğ’Ñ‹Ğ±Ğ¾Ñ€ ĞºĞ°Ñ€Ñ‚Ğ¸Ğ½ĞºĞ¸ Ñ‡ĞµÑ€ĞµĞ· rofi Ğ¸Ğ»Ğ¸ fzf
image=$(find "$DIR" -type f \( -iname '*.png' \) \
    | sort | rofi -dmenu -i -p "Choose lockscreen:")

# Ğ•ÑĞ»Ğ¸ Ğ²Ñ‹Ğ±Ñ€Ğ°Ğ½ Ñ„Ğ°Ğ¹Ğ» â€” ÑĞ¾Ñ…Ñ€Ğ°Ğ½Ğ¸Ñ‚ÑŒ Ğ¿ÑƒÑ‚ÑŒ
if [[ -n "$image" ]]; then
    echo "$image" > ~/.lockbg
    notify-send "ğŸ”’ Lock screen background set!" "$(basename "$image")"
fi
