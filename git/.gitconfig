[core]
    preloadIndex = true
    parallelCheckout = true

[alias]
    st = status
    lg = log --oneline --graph --decorate --all

[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig_local

[push]
    default = simple

[pull]
    rebase = false

[fetch]
    prune = true

[format]
    pretty = format:%C(auto)%h%d %s %C(blue)%cr %C(black)%an

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[mergetool]
    keepBackup = false
    prompt = false

[user]
	email = phtea@mail.com
	name = phtea
