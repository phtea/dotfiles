    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },

  "hyprland/mode": {
      "format": "<span style=\"italic\">{}</span>"
