// -*- mode: jsonc -*-
{
  "spacing": 4,
  "modules-left": [
    "custom/os_button",
    "hyprland/workspaces",
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "pulseaudio",
    "network",
    "custom/mem",
    "temperature",
    "battery",
    "clock",
    "custom/power"
